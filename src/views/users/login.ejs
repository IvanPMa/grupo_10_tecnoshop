<!DOCTYPE html>
<html lang="en">
    <head>
        <title>Iniciar Sesión</title>
        <%- include('../partials/head') %>
        <link rel="stylesheet" href="/css/user/login.css">
    </head>
<body>
    <div class="container">
        <!-- HEADER -->
        <%- include('../partials/header') %>

        <!-- MAIN -->
        <main id="main">
            <section class="login--article">
                <img src="/images/profile-picture.png" alt="Imagen perfil" class="login--image" width="10px">

                <form class="login--form" action="/user/login" method="POST">
                    <!-- Email     -->
                    <p><input name="email" type="email" placeholder="Ingresa tu correo" class="loggin--form--input" value="<%= locals.old && old.email ? old.email : ''%>"></p>
                    <% if(locals.errors && errors.email){ %>
                        <p class="alert"><%= errors.email.msg %></p>
                    <% } %>

                    <!-- Password  -->
                    <p><input name="password" type="password" placeholder="Ingresa tu contraseña" class="loggin--form--input"></p>
                    <% if(locals.errors && errors.password){ %>
                        <p class="alert"><%= errors.password.msg %></p>
                    <% } %>

                    <button type="submit" class="login--form--button" >Ingresar</button>
                    <p class="remember">
                        <input id="remember" type="checkbox" name="remember">
                        <label for="remember">Recuérdame</label>
                    </p>
                    <p class="forget">
                        <a href="#" class="forget--link">
                            ¿Olvidaste tu constraseña?
                        </a>
                    </p>
                </form>

            </section>
        </main>

        <!-- FOOTER -->
        <%- include('../partials/footer') %>
    </div>
</body>
</html>