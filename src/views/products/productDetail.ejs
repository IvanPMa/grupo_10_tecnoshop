<!DOCTYPE html>
<html lang="en">
    <head>
        <title>Detalles del producto</title>
        <%- include('../partials/head') %>
        <link rel="stylesheet" href="/css/product/detail.css">
    </head>
<body>
    <div class="container">
        <!-- HEADER -->
        <%- include('../partials/header') %>

        <!-- MAIN -->
        <main id="main">
            <article class="product">
                <img class="product--image" src="/images/products/<%= product.image %>" alt="Producto">
                <div class="product--description">
                    <h1 class="product--description--name"><%= product.name %></h1>
                    <h2 class="product--description--price">$ <%= product.price %></h2>
                    <p class="product--description-text">
                        <%= product.description %>
                    </p>
                    <div class="product--description--quantity">
                        <input type="number" min="1">
                        <span>Cantidad</span>
                    </div>
                    <button class="product--description--button">
                        Agregar al carrito
                    </button>
                </div>
            </article>
        </main>

        <!-- FOOTER -->
        <%- include('../partials/footer') %>
    </div>
</body>
</html>