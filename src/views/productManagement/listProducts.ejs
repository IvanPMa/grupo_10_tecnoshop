<!DOCTYPE html>
<html lang="en">
<head>
    <%- include('../partials/head')%>
    <link rel="stylesheet" href="/css/productList.css">
    <title>Lista de productos</title>
</head>
<body>
    <div class="container">
        <!-- HEADER -->
        <%- include('../partials/header')%>

        <!-- LIST PRODUCTS -->
        <section class="principal">
            <% for(let i=0; i<products.length; i++){ %>
            <div class="product">
                <img src="/images/products/<%= products[i].image %>" alt="Product image" class="product-image">
                <h2 class="product-name"><%= products[i].name %></h2>
                <form action="" method="GET">
                    <button type="submit">
                        Editar Producto
                    </button>
                </form>
                <form action="" method="POST">
                    <button type="submit">
                        Borrar Producto
                    </button>
                </form>
            </div>
            <% } %>
        </section>
        <!-- BUTTON FOR NEW PRODUCTS -->
        <a href="/products/create">Crear un nuevo producto</a>
        <!-- FOOTER -->
        <%- include('../partials/footer')%>
    </div>
</body>
</html>