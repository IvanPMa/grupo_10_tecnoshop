<!DOCTYPE html>
<html lang="en">
<head>
    <%- include('../partials/head')%>
    <link rel="stylesheet" href="/css/productList.css">
    <title>Lista de productos</title>
</head>
<body>
    <div class="container">
        <!-- HEADER -->
        <%- include('../partials/header')%>

        <!-- LIST PRODUCTS -->
        <section class="principal">
            <% for(let i=0; i<products.length; i++){ %>
            <div class="product">
                <img src="/images/products/<%= products[i].image %>" alt="Product image" class="product-image">
                <a href="/productDetail/<%= products[i].id %>" class="product-name"><%= products[i].name %></a>
                <div class="product-buttons">
                    
                    <a href="/products/edit/<%= products[i].id %>" class="product-edit">
                        Editar Producto
                    </a>
                    <form action="" method="POST">
                        <button type="submit" class="product-delete">
                            Borrar Producto
                        </button>
                    </form>
                </div>
            </div>
            <% } %>
        </section>
        <!-- BUTTON FOR NEW PRODUCTS -->
        <a href="/products/create" class="new-product">Crear un nuevo producto</a>
        <!-- FOOTER -->
        <%- include('../partials/footer')%>
    </div>
</body>
</html>